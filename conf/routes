
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
# GET     /                           controllers.HomeController.index
GET     /                           controllers.Assets.at(path="/public", file="index.html")
# An example controller showing how to use dependency injection

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# GET     /test                       controllers.LocalController.testFetch

POST    /api/setApiKey                  controllers.LocalController.setApiKey

POST    /api/localLogin                 controllers.LocalController.localLogin

POST    /api/localLogout                controllers.LocalController.localLogout

POST    /api/queryLogs                  controllers.LocalController.queryLogs

POST    /api/initAllObserversFromApi    controllers.LocalController.initAllObserversFromApi

POST    /api/queryLocalObservers        controllers.LocalController.queryObservers

POST    /api/importObservers            controllers.LocalController.importObservers

POST    /api/addOneObserver             controllers.LocalController.addOneObserver

POST    /api/removeOneObserver          controllers.LocalController.removeOneObserver

POST    /api/updateOneObserver          controllers.LocalController.updateOneObserver


POST    /api/queryAllUser               controllers.RemoteController.queryAllUser

POST    /api/queryUserApiKey            controllers.RemoteController.queryUserApiKey

POST    /api/queryUserObserver          controllers.RemoteController.queryUserObserver

POST    /api/queryObserverMonitor       controllers.RemoteController.queryObserverMonitor

POST    /api/customObserver             controllers.RemoteController.customObserver

POST    /api/login                      controllers.RemoteController.login

POST    /api/logout                     controllers.RemoteController.logout

POST    /api/addUser                    controllers.RemoteController.addUser

POST    /api/updateUserPassword         controllers.RemoteController.updateUserPassword

POST    /api/updateUserApiLimit         controllers.RemoteController.updateUserApiLimit

POST    /api/updateSelfPassword         controllers.RemoteController.updateSelfPassword

POST    /api/addSelfApiKey              controllers.RemoteController.addSelfApiKey

POST    /api/updateSelfApiKey           controllers.RemoteController.updateSelfApiKey

POST    /api/fetchAllObservers          controllers.RemoteController.fetchAllObservers

POST    /api/addOneObserverRemote       controllers.RemoteController.addOneObserver

POST    /api/removeOneObserverRemote    controllers.RemoteController.removeOneObserver

POST    /api/updateOneObserverRemote    controllers.RemoteController.updateOneObserver

POST    /api/addAllObservers            controllers.RemoteController.addAllObservers

POST    /api/syncFetchMonitorToRemote   controllers.RemoteController.syncFetchMonitorToRemote



GET     /*file               controllers.Assets.versioned(path="/public", file: Asset)